<style>
    th,td{
        padding: 5px;
    }
</style>

<%= link_to :display_all, "/books?status=all" %><br>
<%= link_to :display_available, "/books?status=#{true}" %>

<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Availability</th>
    </tr>

    <% @books.each do |book| %>
        <tr>
            <td><%= book.name %></td>
            <td><%= book.price %></td>
            <td><%= book.status %></td>
            <td><%= link_to :edit, edit_book_path(book) %></td>
            <td><%= link_to :delete, book_path(book), data: { turbo_method: :delete} %></td>
        </tr>
    <% end %>
</table>
